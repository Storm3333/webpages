/* Set up base styles */
page, .container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  height: 100vh;
}

/* Header styles */
.header {
  text-align: center;
  padding: 40rpx 0;
  color: #333;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx; 
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.header-subtitle {
  font-size: 30rpx;
  color: #666;
  margin-top: 0;
}

/* Card styles */
.card-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  margin-top: 30rpx;
}

.card {
  background-color: #fff;
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin: 15rpx 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.card-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 15rpx 0 5rpx 0;
  color: #333;
}

.card-description {
  font-size: 26rpx;
  color: #777;
  text-align: center;
}
